@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="RadioButtonSubmit" method="post">
    <div>
        <label>
            <input type="radio" name="RadioButtonSelectedOption" value="A"> 選項 A
        </label>
        <label>
            <input type="radio" name="RadioButtonSelectedOption" value="B"> 選項 B
        </label>
        <label>
            <input type="radio" name="RadioButtonSelectedOption" value="C"> 選項 C
        </label>
    </div>
    <button type="submit">提交</button>
</form>

<form asp-controller="Home" asp-action="CheckBoxSubmit" method="post">
    <div>
        <label>
            <input type="checkbox" name="CheckBoxSelectedOptions" value="A"> 選項 A
        </label>
        <label>
            <input type="checkbox" name="CheckBoxSelectedOptions" value="B"> 選項 B
        </label>
        <label>
            <input type="checkbox" name="CheckBoxSelectedOptions" value="C"> 選項 C
        </label>
    </div>
    <button type="submit">提交</button>
</form>

<form asp-controller="Home" asp-action="TextBoxSubmit" method="post">
    <div>
        <label for="textValue">請輸入值：</label>
        <input type="text" id="textValue" name="TextboxValue" />
    </div>
    <button type="submit">提交</button>
</form>

<form asp-controller="Home" asp-action="DropDownSubmit" method="post">
    <div>
        <label for="selectedOption">選擇一個選項：</label>
        <select id="selectedOption" name="DropDownSelectedOption">
            <option value="選項 A">選項 A</option>
            <option value="選項 B">選項 B</option>
            <option value="選項 C">選項 C</option>
        </select>
    </div>
    <button type="submit">提交</button>
</form>

<label for="volume">音量:</label>
<input type="range" id="volume" min="0" max="100" value="50" step="1" oninput="updateLabel(this.value)">
<span id="volumeValue">50</span>

<script>
    function updateLabel(value) {
        document.getElementById("volumeValue").innerText = value;
    }
</script>

<div>
    <textarea id="richTextValue" name="RichTextValue" rows="10" cols="50">@Model.RichTextboxValue</textarea>
</div>

<script>
    // 當頁面加載完成後，設置事件監聽器
    document.addEventListener("DOMContentLoaded", function () {
        // 偵測鍵盤按鍵
        document.addEventListener("keydown", function (event) {
            // 在這裡可以做任何你想要的事情
            console.log("按下的鍵是: " + event.key);
            // 你可以根據按下的鍵執行其他操作
            if (event.key === "Enter") {
                // 假設當按下 Enter 鍵時，我們想要提交表單
                alert("你按下了 Enter 鍵!");
                // 這裡可以觸發提交表單或其他操作
            }
        });
    });
</script>